
.home-container {
  font-family: 'Segoe UI', sans-serif;
  background: #121212;
  color: #f5f5f5;
  min-height: 100vh;
  padding: 0;
  margin: 0;
}

.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #1f1f1f;
  padding: 1rem;
  border-bottom: 1px solid #333;
}

.menu-btn {
  font-size: 1.5rem;
  background: none;
  border: none;
  color: #f5f5f5;
  cursor: pointer;
}

.sidebar {
  background: #1f1f1f;
  padding: 1rem;
  border-right: 1px solid #333;
}

.logout-btn {
  background: #ff4d4d;
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  margin-top: 1rem;
  cursor: pointer;
  border-radius: 4px;
}

.main-content {
  padding: 2rem;
  text-align: center;
}

.paper-buttons {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-top: 1rem;
}

.paper-btn {
  background: #fdd835;
  color: #000;
  border: none;
  padding: 1rem 2rem;
  font-size: 1rem;
  border-radius: 8px;
  cursor: pointer;
}
